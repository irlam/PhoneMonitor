{
  "name": "PhoneMonitor Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/php:8.3",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "11"
    },
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8.0"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "github.copilot"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.php": "php"
        }
      }
    }
  },
  
  "forwardPorts": [8080, 3306],
  "portsAttributes": {
    "8080": {
      "label": "Web Server",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "echo 'Dev environment ready! Run: php -S 0.0.0.0:8080 to start web server'",
  
  "remoteUser": "vscode"
}
