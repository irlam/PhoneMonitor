# Application Environment
APP_ENV=development
SITE_URL=https://your-domain.example

# Database Configuration
DB_HOST=localhost
DB_NAME=phone_monitor
DB_USER=changeme
DB_PASS=changeme

# Session Configuration
SESSION_NAME=pm_session

# Static assets cache-busting
# Bump this number when you change CSS/JS to force browsers to fetch the latest
ASSET_VERSION=2

# Security
CSRF_KEY=generate_a_long_random_key_here_minimum_32_chars

# Features
REQUIRE_CONSENT=true

# Google Maps API Key (for location display)
# Get your key from https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=put_your_browser_key_here

# Average speed threshold for UI highlighting (mph)
# Speeds above this value will show the badge in red on the device view
SPEED_AVG_THRESHOLD_MPH=75
